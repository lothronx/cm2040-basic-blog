<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Admin Panel</title>
  </head>
  <body class="font-mono">
    <!-- a link points to the reader - home page -->
    <header class="relative">
      <a
        href="../"
        class="absolute top-10 right-10 border border-green-700 bg-white text-green-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-50 focus:outline-none focus:shadow-outline"
        >HOME</a
      >
    </header>

    <main class="md:mx-40">
      <!-- the blog information -->
      <section class="grid justify-items-center pt-16">
        <h2 class="text-xl text-green-900">Admin Panel</h2>
        <h1 class="text-3xl font-bold text-green-900 pt-2"><%= blog.title %></h1>
        <p class="text-lg pt-2"><%= blog.author %></p>
        <p class="py-2"><%= blog.subtitle %></p>
        <!-- a link to edit the blog information -->
        <a
          href="<%= baseUrl %>/settings"
          class="border border-dashed border-gray-500 bg-white text-gray-500 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-gray-50 focus:outline-none focus:shadow-outline"
          >Edit</a
        >
      </section>

      <!-- the drafts section -->
      <section class="pt-16 relative">
        <h2 class="text-3xl font-bold text-green-900">Drafts</h2>
        <!-- the link points to the new draft page -->
        <a
          href="<%= baseUrl %>/articles/new"
          class="absolute top-16 right-0 border border-green-700 bg-green-700 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-800 focus:outline-none focus:shadow-outline"
          >Create New Draft</a
        >
        <!-- the list of drafts -->
        <% drafts.forEach((draft) => { %>
        <ul>
          <li class="pt-7 pb-2 grid grid-cols-1 border-b border-dashed border-b-gray-500">
            <article class="flex justify-between">
              <!-- info -->
              <div>
                <h3><%= draft.title %></h3>
                <p class="text-gray-500 text-sm pt-2">
                  Created at: <time><%= draft.created_at%></time>
                </p>
                <p class="text-gray-500 text-sm pt-2">
                  Last modified at: <time><%= draft.last_modified_at%></time>
                </p>
              </div>
              <div class="flex justify-end items-end">
                <!-- edit -->
                <a
                  href="<%= baseUrl %>/articles/<%= draft.id %>"
                  class="border border-green-700 bg-white text-green-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-50 focus:outline-none focus:shadow-outline"
                  >Edit</a
                >
                <!-- publish -->
                <form
                  action="<%= baseUrl %>/articles/<%= draft.id %>/publish"
                  method="post"
                  class="border border-yellow-700 bg-white text-yellow-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-yellow-50 focus:outline-none focus:shadow-outline"
                >
                  <input type="submit" value="Publish" />
                </form>
                <!-- delete -->
                <form
                  action="<%= baseUrl %>/articles/<%= draft.id %>/delete"
                  method="post"
                  class="border border-red-700 bg-white text-red-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-red-50 focus:outline-none focus:shadow-outline"
                >
                  <input type="submit" value="Delete" />
                </form>
              </div>
            </article>
          </li>
        </ul>
        <% }) %>
      </section>

      <!-- the published articles section -->
      <section class="py-16">
        <h2 class="text-3xl font-bold text-green-900">Publications</h2>
        <!-- the list of published articles -->
        <ul>
          <% articles.forEach((article) => { %>
          <li class="pt-7 pb-2 grid grid-cols-1 border-b border-dashed border-b-gray-500">
            <article class="flex justify-between">
              <!-- info -->
              <div>
                <h3><%= article.title %></h3>
                <p class="text-gray-500 text-sm pt-2">
                  Created at: <time><%= article.created_at%></time>
                </p>
                <p class="text-gray-500 text-sm pt-2">
                  Last modified at: <time><%= article.last_modified_at%></time>
                </p>
                <p class="text-gray-500 text-sm pt-2">
                  Published at: <time><%= article.published_at%></time>
                </p>
                <p class="text-red-400 text-sm pt-2">Likes: <%= article.likes%></p>
              </div>
              <div class="flex justify-end items-end">
                <!-- share -->
                <a
                  href="../articles/<%= article.id %>"
                  class="border border-cyan-700 bg-white text-cyan-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-cyan-50 focus:outline-none focus:shadow-outline"
                  >Share</a
                >
                <!-- delete -->
                <form action="<%= baseUrl %>/articles/<%= article.id %>/delete" method="post">
                  <input
                    type="submit"
                    value="Delete"
                    class="border border-red-700 bg-white text-red-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-red-50 focus:outline-none focus:shadow-outline"
                  />
                </form>
              </div>
            </article>
          </li>
          <% }) %>
        </ul>
      </section>
    </main>
  </body>
</html>

