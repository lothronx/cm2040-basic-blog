<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Editing... <%= article.title %> - Admin Panel</title>
  </head>
  <body class="font-mono">
    <!-- the link points to the Author - Home Page -->
    <header class="relative">
      <h2>
        <a
          href="../"
          class="absolute top-10 right-10 border border-green-700 bg-white text-green-700 rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-50 focus:outline-none focus:shadow-outline"
          >Back to Admin Panel</a
        >
      </h2>
    </header>

    <!-- the draft edit page -->
    <main class="md:mx-40">
      <!-- info -->
      <div class="pt-24 pb-8">
        <h1 class="text-3xl font-bold text-green-900">Edit Article</h1>
        <p class="text-gray-500 text-sm pt-2">Created at: <time><%= article.created_at%></time></p>
        <p class="text-gray-500 text-sm pt-2">
          Last modified at: <time><%= article.last_modified_at%></time>
        </p>
      </div>
      <!-- edit -->
      <form action="" method="post" class="grid grid-cols-1">
        <!-- title -->
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= article.title %>" />
        <!-- subtitle -->
        <label for="subtitle" class="pt-5">Subtitle</label>
        <input type="text" name="subtitle" id="subtitle" value="<%= article.subtitle %>" />
        <!-- content -->
        <label for="content" class="pt-5">Content</label>
        <textarea name="content" id="content"><%= article.content %></textarea>
        <!-- submit button -->
        <input
          type="submit"
          value="Save"
          class="mt-5 place-self-center border border-green-700 bg-green-700 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-800 focus:outline-none focus:shadow-outline"
        />
      </form>
    </main>
  </body>
</html>

